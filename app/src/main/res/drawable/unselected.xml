<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- "background shadow" -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#000"/>
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- background color -->
    <item
        android:bottom="3px"
        android:left="0px"
        android:right="3px"
        android:top="0px">
        <shape android:shape="rectangle" >
            <solid android:color="#ffffff" />
            <corners android:radius="8dp" />
        </shape>
    </item>
